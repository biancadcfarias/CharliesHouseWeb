@model UserModel
@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário @Model.Nome?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="User" asp-action="Index">Cancelar exclusão.</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id">Confirmar exclusão.</a>
